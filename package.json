{
  "name": "switcheroo",
  "displayName": "Switcheroo",
  "description": "Switch code & test files quickly, rules are customizable",
  "version": "0.1.0",
  "publisher": "narze",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/narze/switcheroo.git"
  },
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.helloWorld",
    "onCommand:extension.switcheroo.swap"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.switcheroo.swap",
        "title": "Switcheroo - Swap"
      }
    ],
    "configuration": [
      {
        "title": "Configuration Samples",
        "properties": {
          "switcheroo.mappings": {
            "type": "array",
            "default": [
              [
                "app/foo/*.rb",
                "test/foo/*_test.rb"
              ]
            ],
            "description": "File mappings to switch",
            "scope": "resource"
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "extension.switcheroo.swap",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.6",
    "@types/sinon": "^9.0.8",
    "@types/vscode": "^1.50.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.0",
    "sinon": "^9.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "@types/micromatch": "^4.0.1",
    "micromatch": "^4.0.2"
  }
}
